<Window x:Class="Elokuvatietokanta.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elokuvatietokanta"
        mc:Ignorable="d"
        Title="SignupWindow" Height="375" Width="397">
    <Grid Background="#CA857E" HorizontalAlignment="Center" Width="397">
        <Grid.RowDefinitions>
            <RowDefinition Height="277*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="_usernameInputField" HorizontalAlignment="Center" Height="28" Margin="0,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="192"/>
        <TextBox x:Name="_emailInputField" HorizontalAlignment="Center" Height="28" Margin="0,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="192"/>
        <PasswordBox x:Name="_passwordInputField" HorizontalAlignment="Left" Height="28" Margin="104,170,0,0"  VerticalAlignment="Top" Width="192">
            <PasswordBox.Style>
                <Style/>
            </PasswordBox.Style>
        </PasswordBox>
        <PasswordBox x:Name="_rePasswordInputField" HorizontalAlignment="Left" Height="28" Margin="104,233,0,0"  VerticalAlignment="Top" Width="192" RenderTransformOrigin="0.478,1.745"/>
        <Button x:Name="_signUpButton" Content="Sign Up" HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" Width="192" Click="OnSubmitClick" Margin="0,279,0,0" Foreground="White" Background="#FFCA857E" BorderBrush="White" Grid.RowSpan="2"/>
        <Label x:Name="_usernameLabel" Content="Username" HorizontalAlignment="Left" Height="30" Margin="102,10,0,0" VerticalAlignment="Top" Width="63" Foreground="White"/>
        <Label x:Name="_emailLabel" Content="Email" HorizontalAlignment="Left" Height="30" Margin="101,75,0,0" VerticalAlignment="Top" Width="38" Foreground="White"/>
        <Label x:Name="_passwordLabel" Content="Password" HorizontalAlignment="Left" Height="30" Margin="102,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.601,-0.065" Width="60" Foreground="White"/>
        <Label x:Name="_rePasswordLabel" Content="Password again" HorizontalAlignment="Left" Height="30" Margin="102,203,0,0" VerticalAlignment="Top" Width="92" Foreground="White"/>
    </Grid>
</Window>
