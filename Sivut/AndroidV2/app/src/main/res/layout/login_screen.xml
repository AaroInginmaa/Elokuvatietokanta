<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="82dp" >

        <Button
            android:id="@+id/loginButton"

            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#FE7474"
            android:text="Kirjaudu"
            tools:text="Kirjaudu" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="213dp"
            android:layout_height="82dp"
            android:background="#EDB8B8"
            android:text="Rekisteröidy"
            tools:text="Rekisteröidy" />
    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="118dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="103dp" >

            <EditText
                android:id="@+id/usernameText"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Käyttäjänimi tai sähköposti"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="95dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Salasana"
                android:inputType="textPassword" />
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/continueButton"
            android:layout_width="186dp"
            android:layout_height="82dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="113dp"
            android:layout_marginBottom="19dp"
            android:background="#EEB9B9"
            android:text="Kirjaudu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Kirjaudu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>