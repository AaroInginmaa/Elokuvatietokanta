<Window x:Class="Elokuvatietokanta.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elokuvatietokanta"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="325">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="_loginInputField" HorizontalAlignment="Left" Height="33" Margin="10,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="234"/>
        <PasswordBox x:Name="_passwordInputField" HorizontalAlignment="Left" Height="33" Margin="10,112,0,0"  VerticalAlignment="Top" Width="234" />
        <Button x:Name="_loginButton" Content="Login" HorizontalAlignment="Left" Height="50" VerticalAlignment="Bottom" Width="100" Click="OnSubmitClick" FontSize="18" Grid.Row="1" Margin="5,0,0,5"/>
        <Label x:Name="_loginLabel" Content="Username or email" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" VerticalAlignment="Top" Width="160" FontSize="18"/>
        <Label x:Name="_passwordLabel" Content="Password" HorizontalAlignment="Left" Height="35" Margin="10,78,0,0" VerticalAlignment="Top" Width="85" FontSize="18"/>
        <Button x:Name="_signUpButton" Content="Sign Up" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="100" Click="OnSignUpClick" FontSize="18" RenderTransformOrigin="1.374,0.756" Grid.Row="1" Margin="110,0,0,5"/>

    </Grid>
</Window>
